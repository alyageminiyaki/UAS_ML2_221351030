                <ImageView
                    android:id="@+id/featureIconTurbidity"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_feature_turbidity"
                    android:contentDescription="@string/feature_icon_description"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_background"
                    android:padding="4dp" />

