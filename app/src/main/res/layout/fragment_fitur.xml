                    android:layout_height="60dp"
                    android:src="@drawable/ic_feature_temperature"
                    android:contentDescription="@string/feature_icon_description"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/circle_background"
                    android:padding="4dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/featureTitleTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_title_temperature"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/kadwa"/>

                    <TextView
                        android:id="@+id/featureDescriptionTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_desc_temperature"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:fontFamily="@font/lora"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

