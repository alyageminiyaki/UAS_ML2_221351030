<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- CardView untuk Informasi Profil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profileInfoCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FADADD"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="60dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kadwa"
                android:text="Nama"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : De Putri Rahma Aliyah"
                android:textColor="#333333"
                android:fontFamily="@font/kadwa"
                android:textSize="16sp"
                android:id="@+id/tvName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIM"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : 221351030"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:id="@+id/tvNIM" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : IF/P/C"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:id="@+id/tvClass" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mata Kuliah"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : Machine Learning II"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/kadwa"
                android:id="@+id/tvCourse" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Aplikasi:"
            android:textColor="#333333"
            android:paddingTop="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Prediksi Kualitas Susu"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

        <!-- ImageView untuk Avatar Profil -->
        <ImageView
            android:id="@+id/profileAvatar"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/profile"
            android:elevation="6dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@+id/profileInfoCard"
            app:layout_constraintBottom_toTopOf="@+id/profileInfoCard"
            app:layout_constraintStart_toStartOf="@+id/profileInfoCard"
            app:layout_constraintEnd_toEndOf="@+id/profileInfoCard"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
