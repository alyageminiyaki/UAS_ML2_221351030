<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragment.ArsitekturModelFragment">

    <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bagian Pre-Processing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_pre_processing_title"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="16dp"/>

        <!-- Sub-bagian 1. Data Transform -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_data_transform_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgDataTransform"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/data_preparation"
            android:contentDescription="Data Transform Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_data_transform_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 2. Label dan Fitur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_label_fitur_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgLabelFitur"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/modeling"
            android:contentDescription="Label and Fitur Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_label_fitur_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Bagian Modeling -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_modeling_title"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="16dp"/>

        <!-- Sub-bagian 1. Train Data dan Standarisasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_train_data_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgTrainData"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/model_simulation"
            android:contentDescription="Train Data Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_train_data_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 2. Membangun Model ANN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_build_ann_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgBuildANN"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/evalution_akurasi"
            android:contentDescription="Build ANN Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_build_ann_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 3. Compile Model -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_compile_model_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgCompileModel"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/save_model"
            android:contentDescription="Compile Model Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_compile_model_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 4. Melatih Model -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_train_model_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgTrainModel"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/model_simulation"
            android:contentDescription="Train Model Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_train_model_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 5. Evaluasi Akurasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_eval_accuracy_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgEvalAccuracy"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/evalution_akurasi"
            android:contentDescription="Evaluate Accuracy Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_eval_accuracy_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 6. Model Simulation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_model_sim_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgModelSimulation"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/model_simulation"
            android:contentDescription="Model Simulation Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_model_sim_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="24dp"/>

        <!-- Sub-bagian 7. Save Model -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_save_model_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/kadwa"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/imgSaveModel"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/save_model"
            android:contentDescription="Save Model Code"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arch_save_model_desc"
            android:textColor="#555555"
            android:textSize="14sp"
            android:fontFamily="@font/lora"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
